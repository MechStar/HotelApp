@model HotelApp.Models.Hotel

@{
    ViewBag.Title = "Count Lights";
}

@using (Html.BeginForm())
{
    var roomLightsOn = Model.RoomLights.Select((light, index) => new KeyValuePair<int, bool>(index + 1, light)).Where(light => light.Value).ToList();

    <br />
    @Html.Label("Guests")
    @Html.TextBox("Guests", Model.Guests, new { @class = "form-control", min = 1, type = "number" })
    @Html.Label("Rooms")
    @Html.TextBox("Rooms", Model.Rooms, new { @class = "form-control", min = 1, type = "number" })
    <br />
    <input class="btn-primary form-control" type="submit" value="Count Lights" />
    <br />
    @Html.Label("Room Lights")
    @Html.TextBox("Room Lights", string.Join(", ", roomLightsOn.Select(light => light.Key)), new { @class = "form-control", disabled = true })
    @Html.Label("Total Lights")
    @Html.TextBox("Total Lights", roomLightsOn.Count, new { @class = "form-control", disabled = true })
}
